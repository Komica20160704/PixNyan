<div class="reply" id="r<%= post.id %>">
  <div class="replywrap">

<%= check_box_tag "del_post[#{post.id}]", post.id %>
<span class="title"><%= post.title %></span>
名稱: <span class="name"><%= author_meta(post) %></span>&nbsp;
[<%= post.created_at.strftime('%y/%m/%d %a %H:%M') %> ID:<%= post.identity_hash %>]&nbsp;
<%= postid_link(post) %><br />
<% unless post.image.blank? %>
  <%= link_to( image_tag(post.image.url(:small), class: "img"), post.image.url(:full), rel: "_blank" ) %>
  檔名：<%= link_to( post.image_file_name, post.image.url(:full), rel: "_blank" ) %>
  -(<%= number_to_human_size post.image_file_size %>, <%= post.image_dimensions[0] %>x<%= post.image_dimensions[1] %>)&nbsp;
  <small>[以預覽圖顯示]</small>
<% end %>
<div class="quote"><%= text_parser post.message %></div>

  </div>
</div>